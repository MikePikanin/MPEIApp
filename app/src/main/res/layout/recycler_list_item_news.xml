<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/news_background">

    <ImageView
        android:id="@+id/iconNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_launch"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/open_new_tab"/>
    <TextView
        android:id="@+id/listNewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:layout_toStartOf="@id/iconNews"
        android:layout_toLeftOf="@id/iconNews"
         />


    <!--<TextView
        android:id="@+id/listNewsBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listNewsTitle"
        android:textSize="18sp"
        android:paddingLeft="5dp" />-->

</RelativeLayout>